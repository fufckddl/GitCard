# GitHub OAuth 설정
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
# 개발 환경: http://localhost:8000/auth/github/callback
# 프로덕션 환경: https://gitcard.kr/api/auth/github/callback (Nginx 프록시 사용)
GITHUB_REDIRECT_URI=https://gitcard.kr/api/auth/github/callback

# JWT 설정
JWT_SECRET=-aQogNGdkXFjHRgcipPRKaLU9tzrSniN4THrc5EcASPH2HXzeKSZYY9bLYkJ5gaE
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Frontend 설정
# 개발 환경: http://localhost:5173
# 프로덕션 환경: https://gitcard.kr
FRONTEND_BASE_URL=https://gitcard.kr

# API 설정
# 개발 환경: http://localhost:8000
# 프로덕션 환경: https://gitcard.kr/api (Nginx 프록시 사용)
API_BASE_URL=https://gitcard.kr/api

# 프론트엔드 빌드용 환경 변수 (Vite)
# 개발 환경: http://localhost:8000
# 프로덕션 환경: https://gitcard.kr/api (Nginx 프록시 사용)
VITE_API_BASE_URL=https://gitcard.kr/api

# 프론트엔드 빌드용 환경 변수 (프론트엔드 URL)
# 개발 환경: http://localhost:5173
# 프로덕션 환경: https://gitcard.kr
VITE_FRONTEND_BASE_URL=https://gitcard.kr

# 데이터베이스 설정
# 형식: mysql+pymysql://username:password@host:port/database_name
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/gitcard

# 프로덕션 환경 변수 예시 (도메인 사용 시):
# GITHUB_REDIRECT_URI=https://api.yourdomain.com/auth/github/callback
# FRONTEND_BASE_URL=https://yourdomain.com
# API_BASE_URL=https://api.yourdomain.com
# DATABASE_URL=mysql+pymysql://gitcard_user:secure_password@localhost:3306/gitcard
#
# 참고: GitHub OAuth App 설정에서도 동일한 리다이렉트 URI를 등록해야 합니다.
# GitHub → Settings → Developer settings → OAuth Apps → Authorization callback URL

