# GitHub OAuth 설정
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_REDIRECT_URI=http://localhost:8000/auth/github/callback

# JWT 설정
JWT_SECRET=your_very_secure_random_secret_key_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Frontend 설정
FRONTEND_BASE_URL=http://localhost:5173

# API 설정
API_BASE_URL=http://localhost:8000

# 데이터베이스 설정
# 형식: mysql+pymysql://username:password@host:port/database_name
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/gitcard

# 프로덕션 환경 변수 예시:
# GITHUB_REDIRECT_URI=https://api.yourdomain.com/auth/github/callback
# FRONTEND_BASE_URL=https://yourdomain.com
# API_BASE_URL=https://api.yourdomain.com
# DATABASE_URL=mysql+pymysql://gitcard_user:secure_password@localhost:3306/gitcard

